<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lecar.AddIllnessPage"
             Title="">
    <StackLayout Padding="25" Spacing="15">
        <Entry x:Name="NameEntry" Placeholder="Название болезни" />
        <Entry x:Name="SymptomsEntry" Placeholder="Симптомы" />
        <Entry x:Name="RemedyEntry" Placeholder="Лекарство" />

        <Button Text="Сохранить" Clicked="OnSaveButtonClicked" />
        <Button Text="Отмена" Clicked="OnCancelButtonClicked" />
    </StackLayout>
</ContentPage>