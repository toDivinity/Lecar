<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lecar.IllnessPage"
             Title="Болезни">
    <StackLayout Padding="25">
        <ListView x:Name="IllnessListView" HasUnevenRows="True" ItemsSource="{Binding Illnesses}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="10">
                            <Label Text="{Binding Name}" FontSize="18" />

                            <Label Text="Симптомы:" FontSize="14" TextColor="Gray" />
                            <Label Text="{Binding SymptomsDisplay}" FontSize="14" TextColor="Gray" />

                            <Button Text="Удалить"
                                    BackgroundColor="Red"
                                    TextColor="White"
                                    CommandParameter="{Binding .}"
                                    Clicked="OnDeleteIllnessClicked" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Добавить" Clicked="OnAddIllnessClicked" />
    </StackLayout>
</ContentPage>
