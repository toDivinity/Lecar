<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lecar.AddRemedyPage"
             Title="Добавить Лекарство">
    <StackLayout Padding="25" Spacing="15">
        <Label Text="Добавить Лекарство" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="NameEntry" Placeholder="Название лекарства" />
        <Entry x:Name="IllnessEntry" Placeholder="Связанная болезнь" />
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
            <Button Text="Сохранить" Clicked="OnSaveButtonClicked" />
            <Button Text="Отмена" Clicked="OnCancelButtonClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>
