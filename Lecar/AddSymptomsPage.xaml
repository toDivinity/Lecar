<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lecar.AddSymptomPage"
             Title="Добавить симптом">
    <StackLayout Padding="10" Spacing="15">

        <!-- Поле ввода названия симптома -->
        <Entry x:Name="SymptomNameEntry" Placeholder="Название симптома" />

        <!-- Кнопки -->
        <Button Text="Сохранить" Clicked="OnSaveButtonClicked" />
        <Button Text="Отмена" Clicked="OnCancelButtonClicked" />
    </StackLayout>
</ContentPage>