<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lecar.EditPatientPage"
             Title="Редактирование пациента">

    <StackLayout Padding="10" Spacing="15">
        <Entry x:Name="NameEntry" Placeholder="Имя пациента" />
        <Entry x:Name="AgeEntry" Placeholder="Возраст" Keyboard="Numeric" />
        <Entry x:Name="SymptomsEntry" Placeholder="Симптомы" />

        <Button Text="Сохранить" Clicked="OnSaveButtonClicked" />
        <Button Text="Отмена" Clicked="OnCancelButtonClicked" />
    </StackLayout>
</ContentPage>
