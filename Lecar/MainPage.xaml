<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lecar.MainPage">
    <StackLayout Padding="25" BackgroundColor="LightGray">

        <ListView x:Name="PatientsListView" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding Name}" VerticalOptions="Center" HorizontalOptions="StartAndExpand" />
                            <Button Text="Удалить"
                                    BackgroundColor="Red"
                                    TextColor="White"
                                    CommandParameter="{Binding .}"
                                    Clicked="OnDeletePatientClicked" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Добавить Пациента" Clicked="OnAddPatientClicked" />
    </StackLayout>
</ContentPage>
