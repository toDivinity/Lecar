<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lecar.SymptomsPage"
             Title="Симптомы">
    <StackLayout Padding="10" Spacing="15">

        <!-- Список симптомов -->
        <ListView x:Name="SymptomsListView"
                  ItemsSource="{Binding Symptoms}"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame Margin="5" Padding="10" BorderColor="LightGray" CornerRadius="10">
                            <Label Text="{Binding Name}" FontSize="18" />
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Кнопка добавления -->
        <Button Text="Добавить симптом" Clicked="OnAddSymptomClicked" />
    </StackLayout>
</ContentPage>
